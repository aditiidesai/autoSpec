{
    "name": "BookingDetailsAPI",
    "description": "Provides PNR details, passenger information, itinerary segments, seats, and fare breakdown.",
    "endpoints": ["/booking/v1/getPNR"],
    "input_schema": {
      "type": "object",
      "properties": {
        "pnr": { "type": "string" },
        "last_name": { "type": "string" }
      },
      "required": ["pnr"]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "pnr": { "type": "string" },
        "passenger_name": { "type": "string" },
        "itinerary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "flight_number": { "type": "string" },
              "airline_code": { "type": "string" },
              "departure": { "type": "string" },
              "arrival": { "type": "string" },
              "date": { "type": "string", "format": "date" }
            }
          }
        },
        "seat": { "type": "string" },
        "fare": {
          "type": "object",
          "properties": {
            "currency": { "type": "string" },
            "amount": { "type": "number" }
          }
        }
      }
    }
  }
  